<%- include("partials/header.ejs", {username: username}) -%>

<style>

.cart {
  max-width: 70%;
  margin: 20px auto;
  padding: 20px;
  border: 1px solid #ccc;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

.cart h1 {
  margin-top: 0;
  color: #fff;
}

.cart-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 10px 0;
  padding: 10px;
  border: 1px solid #ddd;
}

.cart-item span {
  margin-right: 10px;
}

.cart-item button {
  padding: 5px 10px;
  background-color: #f44336;
  color: white;
  border: none;
  cursor: pointer;
}

.cart-total {
  padding: 10px;
  text-align: center;
  margin-top: 20px;
  font-weight: bold;
  background-color: #fff;
  width: 100%;
}

.cart-container {

display: flex;
flex-wrap: wrap;
gap: 20px;
margin: 20px;
}

.product {
    background-color: white;
border: 1px solid #ccc;
border-radius: 5px;
padding: 10px 0;
width: calc(33.5% - 20px);
text-align: center;
margin: 1rem 0;
}

.button{
  margin-top: 5px;
}

.change-number-button{
  background-color: #444;
  color: #fff;
  border-radius: 5px;
}


</style>

  <div class="cart">
    <h1>Your Cart</h1>
    <div class="cart-container" id="cart-container">
      <% let sum=0; %>
      <% cartItems.forEach(function(element){ %>
        
        <div class="product">
          <img src="<%= element.image %>">
          <h3><%= element.name %></h3>
          <p>₹<%= element.price %></p>
          <span>Quantity: <%= element.quantity %></span>
          <button class="change-number-button" onclick="increaseProductNumber(this)">+</button>
          <button class="change-number-button" onclick="decreaseProductNumber(this)">-</button>
          <br>
          <button class="button add-to-cart" onclick="handleDeleteItemButton(this)">Delete Item</button>
          <button class="button" onclick="handleViewDetailsButton(this)">View Details</button>
        </div>

      <% sum = sum + element.price*element.quantity  }) %>

    <div class="cart-total">
      <span>Total: ₹<span id="total"><%= sum %></span> <button class="button">Place Order</button></span>
    </div>
  </div>

  <div id="myModal" class="modal">
    <div class="modal-content">
        <div class="popup-product">
          <span class="close">&times;</span>
          <h2 id="modal-h2"></h2>
        <img id="modal-img" src="">
        <h3 id="modal-h3"></h3>
        <p id="modal-p"></p>
    </div>
    </div>
</div>


<script>
  document.getElementById("change-button").setAttribute("href", "/");
  document.getElementById("change-button").innerText = "Products";
</script>

<%- include("partials/footer.ejs") -%>